<?xml version="1.0" ?>
<robot name="D405_camera_with_stand">
  <link name="vertical_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
       <mass value="2.5"/>
       <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.1 0.1 2"/>
      </geometry>
    </visual>
  </link>

  <link name="horizontal_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
       <mass value="2.5"/>
       <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.5 0.1 0.05"/>
      </geometry>
    </visual>
  </link>

<link name="camera_link">
 <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
       <mass value="0.4"/>
       <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
   <visual>
    <geometry>
      <mesh filename="d405.dae"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </geometry>
   </visual>
   </link>

<joint name="vertical_to_horizontal" type="fixed">
    <parent link="vertical_link"/>
    <child link="horizontal_link"/>
    <origin xyz="-0.2 0 1.025"/>
  </joint>

<joint name="camera_joint" type="fixed">
    <parent link="horizontal_link"/>
    <child link="camera_link"/>
    <origin rpy="0.7854 0 1.5708" xyz="-0.25 0 -0.024"/>
  </joint>

</robot>